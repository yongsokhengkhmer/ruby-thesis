<div class="right">
  <div class="top">
    <span><%= t "chats.to" %>
      <span class="name"><%= conversation_partner.name %></span>
    </span>
  </div>
  <div class="message-loading">
    <i class="fa fa-circle-o-notch fa-spin fa-fw"></i>
    <span class="sr-only">Loading...</span>
  </div>
  <div class="chat active-chat conversation-chat-<%= conversation.id %>"
    data-conversation-id="<%= conversation.id %>">
    <%= render "conversations/messages", messages: messages %>
  </div>
  <div class="write">
    <%= form_for Message.new, html:{id: "chat-form"}, remote: true do |f| %>
      <div hidden>
        <%= f.file_field :file_attachment, class: "file-attachment" %>
        <%= f.file_field :image_attachment, class: "image-attachment",
          accept: "image/jpg,image/png,image/jpeg,image/gif" %>
        <%= f.hidden_field :conversation_id, value: conversation.id %>
        <%= f.hidden_field :receiver_id, value: conversation_partner.id %>
      </div>

      <a href="javascript:void(0)" class="write-link attach attach-file"></a>
      <a href="javascript:void(0)" class="write-link attach attach-image"></a>
      <%= f.text_field :content, id: "message" %>
      <a href="javascript:void(0)" class="write-link send btn-send-message"></a>
    <% end %>
  </div>
  <div hidden class="message-paginate">
    <%= render_pagination messages %>
  </div>
</div>
